<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.udacity.project.testyoursoil.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_test_text_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_test_text_selection_description"/>

        <CheckBox
            android:id="@+id/look_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/look_option_text" />

        <CheckBox
            android:id="@+id/feel_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feel_option_text" />

        <CheckBox
            android:id="@+id/separate_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/separate_option_text" />

        <CheckBox
            android:id="@+id/dig_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dig_option_text" />

        <CheckBox
            android:id="@+id/flood_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flood_option_text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectOptions"
            android:text="@string/select_button_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/look_option_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/soil_appearance"
                android:visibility="gone" />

            <TextView
                android:id="@+id/look_option_instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:text="@string/look_test_instructions"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feel_option_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/soil_feel"
                android:visibility="gone" />

            <TextView
                android:id="@+id/feel_option_instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:text="@string/feel_test_instructions"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/separate_option_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/soil_separation"
                android:visibility="gone" />

            <TextView
                android:id="@+id/separate_option_instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:text="@string/separate_test_instructions"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dig_option_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/soil_strata"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dig_option_instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:text="@string/dig_test_instructions"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/flood_option_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/soil_infiltration"
                android:visibility="gone" />

            <TextView
                android:id="@+id/flood_option_instructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:text="@string/flood_test_instructions"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
